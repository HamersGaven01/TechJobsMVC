<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" value="@ViewBag.jobs" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{

        //TODO #4: Loop over the search results to display all job fields.

        @if (ViewBag.jobs == null) //holy cow this was hard to figure out//
        {
            <h4>Search Results: </h4>
        }
        else
        {
            <h4>Search Results: </h4>

            @foreach (var result in ViewBag.jobs)
            {
                <table class="job-listing">
                    <tr>
                        <th>ID</th>
                        <td>@result.Id</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>@result.Name</td>
                    </tr>
                    <tr>
                        <th>Employer</th>
                        <td>@result.Employer</td>
                    </tr>
                    <tr>
                        <th>Location</th>
                        <td>@result.Location</td>
                    </tr>
                    <tr>
                        <th>Position Type</th>
                        <td>@result.PositionType</td>
                    </tr>
                    <tr>
                        <th>Core Competency</th>
                        <td>@result.CoreCompetency</td>
                    </tr>


                </table>

                <br />
            }

        }
    }
</div>